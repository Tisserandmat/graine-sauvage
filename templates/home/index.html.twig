              {# <li><a href="#">CSS</a></li> #}
              {# </ul> #}
              {# </li> #}
              {# </ul> #}
            </div>
            <div class="description">
              <h1 class="text-truncate">{{ vegetable.name }}</h1>
              <h2 class="text-break">LÉGUME</h2>
              <p class="card-content"> {{ vegetable.description|striptags|raw }}</p>
              <p class="read-more">
                <a class="btn btn-success text-white" href="{{ path('vegetable', {slug: vegetable.slug} ) }}">Voir</a>
              </p>
            </div>
          </div>
        {% endfor %}
      </div>
      {% endif %}
    </div>
    <div class="container-fluid p-5 justify-content-center mt-5">
      <div class="jumbotron card rounded bg-jumbo-green">
        <div class="justify-content-center d-flex text-break">
