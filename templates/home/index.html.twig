  {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block body %}

  <div class="w-100  d-flex homeTop ">
    <img class="homePicture" src="images/seed.jpg" alt="image principale">

    <div
      class="homeTxt d-flex title-content  text-center w-100 p-0  flex-column justify-content-around align-items-center align-self-center">
      <h1 class="ml5 text-light title-h1">
                    <span class="text-wrapper p-4 m-4">
                        <span class="line line1"></span>
                        <span class="letters letters-left">Graine</span>
                        <span class="letters letters-right">Sauvage</span>
                        <span class="line line2"></span>
                    </span>
      </h1>
    </div>

  </div>
  <div class="container-fluid">
    {% if vegetables is not null %}

    <div class="container-fluid background-card">
      {# <img class="homePicture" src="images/vegetable6.jpg" alt="image principale"> #}
      <div class="row justify-content-center ml-5 mr-5 mt-5">
        <h2 class="text-center text-primary-color">Légumes du mois</h2>
      </div>


      <div class="row mt-5 justify-content-around content-card p-4 m-4">
        {% for vegetable in vegetables %}
          <div class="blog-card ">
            <div class="meta col">

              <img class="photo col p-0 m-0 " alt="{{ vegetable.name }}"
                   src="{% if vegetable.imageName is  empty %}images/sans-image.jpg"{% else %}
              {{ vich_uploader_asset(vegetable, 'imageFile') }}" {% endif %}
              />
              {# <ul class="details"> #}
              {# <li class="author"><a href="#">John Doe</a></li> #}
              {# <li class="date">Aug. 24, 2015</li> #}
              {# <li class="tags"> #}
