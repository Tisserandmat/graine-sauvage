{#                            </ul>#}
                        </div>
                        <div class="description">
                            <h1>{{ vegetable.name }}</h1>
                            <h2>Opening a door to the future</h2>
                            <p class="card-content"> {{ vegetable.description|raw }}</p>
                            <p class="read-more">
                                <a class="btn btn-success text-white" href="#">Voir</a>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
    </div>
