{% extends '_layout.html.twig' %}
{% block title %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block body %}



        <div class="w-100  d-flex homeTop ">
            <img class="homePicture" src="images/seed.jpg" alt="image principale">

            <div class="homeTxt d-flex  text-center w-100 p-0  flex-column justify-content-around align-items-center align-self-center">
                <h1 class="ml5 text-light title-h1">
                    <span class="text-wrapper">
                        <span class="line line1"></span>
                        <span class="letters letters-left">Graine</span>
                        <span class="letters letters-right">Sauvage</span>
                        <span class="line line2"></span>
                    </span>
                </h1>
            </div>

        </div>
    <div class="container-fluid">
        {% if vegetables is not null %}

        <div class="container-fluid background-card">
            <img class="homePicture" src="images/vegetable6.jpg" alt="image principale">
            <div class="row justify-content-center pt-5">
            <h2 class="text-center">Les légumes du mois</h2>
            </div>


        <div class="row mt-5 justify-content-around ">
            {% for vegetable in vegetables %}
                <div class="col-3">
                <div class="grid__item ">
                    <div class="card offset-1">
                        <img class="col p-0" alt="{{ vegetable.name }}"
                                           src="{% if vegetable.imageName is  empty %}images/sans-image.jpg"{% else %}
                        {{ vich_uploader_asset(vegetable, 'imageFile') }}" {% endif %}
                        />
                        <div class="card__content col p-2">
                            <h1 class="card__header text-center text-break ">{{ vegetable.name }}</h1>
                            <p class="card__text text-center text-truncate text-break">{{ vegetable.description|raw }}</p>
                            <button class="btn btn-primary-color justify-content-center text-center"><a href="" class="text-light">Détails</a></button>
                        </div>
                    </div>
                </div></div>
            {% endfor %}
            {% endif %}
        </div>
    </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('home_js') }}
    {{ encore_entry_script_tags('sidebar_js') }}
{% endblock %}
