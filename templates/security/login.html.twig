{% extends 'layout.html.twig' %}

{% block title %}Connexion !{% endblock %}
 {% block stylesheets %}
     {{ encore_entry_link_tags('login') }}
 {% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container">
        <div class="row text-center justify-content-center">
            <h1 class="h3 mb-5 font-weight-normal mt-5">Espace personnel</h1>
        </div>
        <div class="row justify-content-center mb-5">
            <form method="post" class="col-9">
                <label for="inputEmail">Identifiant</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       required
                       autofocus>
                <label for="inputPassword" class="mt-2">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="text-center">
                    <button class="btn btn-lg btn-success text-info mt-3" type="submit">
                        Connexion
                    </button>
                </div>
            </form>
        </div>


    </div>


{% endblock %}
