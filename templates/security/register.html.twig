{% extends '_layout.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block title %}Création de compte{% endblock %}

{% block body %}
    <div class="container page-content">
        <div class="row justify-content-center">
            <h1 class="mt-5">Créer mon compte</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-7">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.login) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.password) }}

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">Créer mon compte </button>
                </div>

                {{ form_end(registrationForm) }}</div>

        </div>
    </div>
{% endblock %}
