{% extends '_layoutAdmin.html.twig' %}

{% block body %}
    <div class="container text-center mt-5 mb-b">
        <div class="row mb-5 mt5 justify-content-center text-center">
            <h1 class="mb-5 mt-5">Graine {{ seed.name }}</h1>
        </div>

        <div class="row mb-5 mt5">
        <table class="table table-striped table-responsive-sm  col-4-sm table-hover mt-5 mb-5">
            <tbody>
            <tr>
                <th class="text-info align-middle">Nom</th>
                <td class="align-middle">{{ seed.name }}</td>
            </tr>
            <tr>
                <th class="text-success">Description</th>
                <td class="align-middle"> {{ seed.description|nl2br }}</td>
            </tr>
            <tr>
                <th class="text-info">Semis</th>
                <td>{{ seed.seeding }}</td>
            </tr>
            <tr>
                <th class="text-success">Prix</th>
                <td>{{ seed.price }}</td>
            </tr>
            </tbody>
        </table>
        </div>
        <div class="row mb-5 mt5">
               {{ include('admin/seed/_delete_form.html.twig') }}

        </div>

        <div class="row justify-content-between mb-5 mt-5">

            <button class="btn btn-success mb-5 mt-5"><a href="{{ path('seed_index') }}" class="text-info"><i
                            class="fas fa-arrow-left text-info"></i> Revenir Ã  la liste</a></button>

            <button class="btn btn-success mb-5 mt-5"><a href="{{ path('seed_edit', {'id': seed.id}) }}" class="text-info"><i
                            class="fas fa-edit text-info"></i>
                    Modifier</a>
            </button>
        </div>
    </div>
{% endblock %}
