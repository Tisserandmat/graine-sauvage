{% extends '_layout.html.twig' %}
{% block title %}Administration graines{% endblock %}
{% block body %}
    <div class="container page-content">
        <h1 class="text-center mt-5 mb-5">Liste des graines</h1>

        <div class="row justify-content-center mb-5">
            <button class="btn btn-primary-color"><a href="{{ path('seed_new') }}" class="text-light"><i class="fas fa-plus"></i> Ajouter</a></button>
        </div>

        <table class="table table-striped table-responsive-md table-hover mt-5 ">
            <thead class="bg-success">
            <tr class="text-light text-center">
                <th>Nom</th>
                <th>Description</th>
                <th>Semis</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for seed in seeds %}
                <tr class="justify-content-center">
                    <td class="align-middle">{{ seed.name }}</td>
                    <td class="align-middle">{{ seed.description|nl2br }}</td>
                    <td class="align-middle">{{ seed.seeding }}</td>
                    <td class="align-middle">{{ seed.price }}</td>
                    <td  class="align-middle">
                        <a href="{{ path('seed_edit', {'id': seed.id}) }}" class="text-success mr-3"><i class="fas fa-pen"></i></a>
                        <a href="{{ path('seed_show', {'id': seed.id}) }}" class="text-info"><i class="fa fa-eye"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}

