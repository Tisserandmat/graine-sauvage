{% extends '_layout.html.twig' %}
{% block title %}Administration plantes{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('indexAdmin') }}
{% endblock %}
{% block body %}
    <div class="container page-content mb-4">
        <h1 class="text-center mt-5 mb-5">Liste des légumes</h1>

        <div class="row justify-content-center mb-5">
            <button class="btn btn-primary-color"><a href="{{ path('vegetable_new') }}" class="text-light"><i
                            class="fas fa-plus"></i> Ajouter</a></button>
        </div>

        <table class="table table-striped table-responsive-md table-hover mt-5">
            <thead class="bg-success">
            <tr class="text-light align-middle text-center">
                <th>Images</th>

                <th  class="align-middle">Nom</th>
                <th  class="align-middle">Description</th>
                <th  class="align-middle">Nom Latin</th>
                <th  class="align-middle">Famille</th>
                <th  class="align-middle">Type</th>
                <th  class="align-middle">Taille</th>
                <th  class="align-middle">Récolte</th>
                <th  class="align-middle">Type de sol</th>
                <th  class="align-middle">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for vegetable in vegetables %}
                <tr class="justify-content-center text-center">
                    <td><img src="{{ vich_uploader_asset(vegetable, 'imageFile') }}" alt="{{ vegetable.name }}"/></td>
                    <td class="align-middle">{{ vegetable.name }}</td>
                    <td class="align-middle">{{ vegetable.description|nl2br }}</td>
                    <td class="align-middle">{{ vegetable.latinName }}</td>
                    <td class="align-middle">{{ vegetable.family }}</td>
                    <td class="align-middle">{{ vegetable.type }}</td>
                    <td class="align-middle">{{ vegetable.size }}</td>
                    <td class="align-middle">{{ vegetable.harvestMonth }}</td>
                    <td class="align-middle">{{ vegetable.soilType }}</td>
                    <td class="align-middle">
                        <a href="{{ path('vegetable_show', {'id': vegetable.id}) }}" class="btn btn-success"><i
                                    class="text-light fas fa-pen"></i> </a>
                        <a href="{{ path('vegetable_edit', {'id': vegetable.id}) }}" class="btn btn-info mt-2"><i
                                    class=" text-light fa fa-eye"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
